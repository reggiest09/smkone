<div class="lu-newletter">
            <h2>Subscribe to our newsletter. You will receive an update when we launch our website and app.</h2>
              <%= form_tag(subscribe_path, method:'post', multipart: true) do %>
              <div class="row">
                <div class="col-md-6 col-md-offset-3">
                  <div id="mc_embed_signup" class="lu_singup_form">
                    
                      <div id="mc_embed_signup_scroll">
                        <div class="mc-field-group input-group input-group-lg">
                          
                                <%= email_field_tag 'sub_email', nil, class:'form-control', placeholder:'Email Address'%>
                                 <span class="input-group-btn">
                            <%= button_tag(type:'submit',class: "btn btn-primary btn-lg", )do %>
                                Subscribe
                                <% end %>%>
                          </span>
                          
                                
                        </div>
                      </div>
                  </div>
                  <!--End mc_embed_signup-->
                </div>
              </div>
              <% end %>
          </div>